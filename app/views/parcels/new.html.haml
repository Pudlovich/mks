- if @parcel.errors.present?
  .bg-danger
    - @parcel.errors.full_messages.each do |message|
      %p= message

%h2
  = t('.title')
= form_for @parcel, url: parcels_path, method: :post do |f|
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :depth
    = f.text_field :depth
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit t('.title')
