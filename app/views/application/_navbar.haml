%nav.navbar.navbar-fixed-top{:role => "navigation"}
  .container.max-width
    %button.navbar-btn.navbar-toggle.collapsed{"type" => "button", "data-target" => ".navbar-collapse", "data-toggle" => "collapse", "aria-expanded" => "false"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => root_path} MKS Express
    .collapse.navbar-collapse
      .navbar-left
        %ul.nav.navbar-nav
          %li
            = link_to 'Nadawcy', root_path
          %li
            = link_to 'Odbiorcy', root_path
          %li
            = link_to 'Informacje', root_path
      .navbar-right
        %ul.nav.navbar-nav
          - if current_user
            %li
              = link_to current_user.email, root_path
            %li
              = link_to t('user.sign_out'), destroy_user_session_path, method: 'delete'
          - else
            %li
              = link_to t('user.sign_in'), new_user_session_path
            %li
              = link_to t('user.sign_up'), new_user_registration_path
