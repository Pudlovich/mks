        - if current_user
          =current_user.email
          %button.btn.btn-default.navbar-btn{:type => "button"}
            = link_to t('user.sign_out'), destroy_user_session_path, method: 'delete'
        - else
          %button.btn.btn-default.navbar-btn{:type => "button"}
            = link_to t('user.sign_in'), new_user_session_path
