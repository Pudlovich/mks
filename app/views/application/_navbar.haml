%nav.navbar.navbar-fixed-top{:role => "navigation"}
  .navbar-inner
    .container
      .navbar-header.pull-left
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => root_path} MKS Express
        %button.btn.btn-default.navbar-btn{:type => "button"}
          = link_to 'Nadawcy', root_path
        %button.btn.btn-default.navbar-btn{:type => "button"}
          = link_to 'Odbiorcy', root_path
        %button.btn.btn-default.navbar-btn{:type => "button"}
          = link_to 'Informacje', root_path
