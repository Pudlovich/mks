.row
  .anchor#pending
  .pull-left
    %h1= t('.parcels')
  .tracking-module.pull-right
    = render 'find_parcel_form'
.row
  %h3= t('.pending')
  .pending-parcels
  = render 'parcel_table', parcels: @pending_parcels
  .parcel-pagination-wrapper
    .pagination
      = will_paginate @pending_parcels, param_name: :pending, params: { anchor: 'pending' }
